{
  "name": "my-better-t-app",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "zod": "^4.1.12",
      "@prisma/client": "^6.15.0",
      "better-auth": "^1.3.28",
      "dotenv": "^17.2.2",
      "tsdown": "^0.15.5",
      "@t3-oss/env-core": "^0.13.8",
      "motion": "^12.23.24"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "check-types": "bun run --filter '*' check-types",
    "dev:native": "bun run --filter native dev",
    "dev:web": "bun run --filter web dev",
    "db:push": "bun run --filter @my-better-t-app/db db:push",
    "db:studio": "bun run --filter @my-better-t-app/db db:studio",
    "db:generate": "bun run --filter @my-better-t-app/db db:generate",
    "db:migrate": "bun run --filter @my-better-t-app/db db:migrate",
    "db:seed": "bun run --filter @my-better-t-app/db db:seed"
  },
  "dependencies": {
    "@t3-oss/env-core": "^0.13.8",
    "dotenv": "^17.2.2",
    "motion": "^12.23.24",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "ultracite": "6.3.2",
    "tsdown": "^0.15.5",
    "@types/node": "^22.13.11"
  },
  "packageManager": "bun@1.2.21"
}
